{
  "name": "pokedex",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "cd .. && husky frontend/.husky",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:staged": "lint-staged",
    "test": "echo \"TODO\"",
    "ts:check": "./node_modules/.bin/tsc -p . --noEmit",
    "ts:watch": "./node_modules/.bin/tsc -p . --noEmit --watch",
    "prettier": "./node_modules/.bin/prettier --write 'src/**/*.{ts,tsx}'",
    "prettier:staged": "pretty-quick --staged",
    "check:style": "npm run prettier:staged && npm run lint",
    "check:health": "npm run test && npm run build",
    "check:all": "npm run check:style && npm run check:health"
  },
  "dependencies": {
    "next": "14.2.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8",
    "prettier": "^3.3.2",
    "pretty-quick": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
